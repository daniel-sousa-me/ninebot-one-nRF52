//face-main




face[0] = {
  offms: 3000,
  wake:0,
  init: function(){
    var g=w.gfx;
    var d=(Date()).toString().split(' ');
    this.v=w.battVoltage(1);
    g.setColor(1,colo.bck1);
    g.fillRect(0,0,158,50); //date
    g.fillRect(162,0,239,50);//batt
  g.setFont("Vector",35);
    if (typeof set.push !== 'undefined') g.drawString(set.push,119-(g.stringWidth(set.push))/2,165); //info
    g.fillRect(0,200,78,239); //bottom1 memmory
    g.fillRect(82,200,158,239); //bottom 2 
    g.fillRect(162,200,239,239); //bottom3 euc
//    g.fillRect(0,151,101,195);// hours2
//    g.fillRect(101,151,239,195);//min2
//    g.fillRect(0,55,100,150);
//    g.fillRect(105,55,239,150);
    g.setColor(0,colo.btnTxt);
    g.setFont("Vector",35);
//    g.drawString(mem(),4,207); //memmory
	g.drawString("AL",97,207); //Alarms
//    g.drawString("EUC",167,207); //euc
    g.setFont("Vector",35);
    g.drawString(d[2]+" "+d[0].toUpperCase(), (81-(g.stringWidth(d[2]+" "+d[0].toUpperCase()))/2) ,9); //date
    g.setFont("7x11Numeric7Seg",4);
    g.drawString(this.v,239-(g.stringWidth(this.v)),3); //batt
    g.flip();
    this.hour=-1;
    this.min=-1;
    this.sec=-1;
    this.batt=-1;
    this.mem=-1;
	this.bt=-1;
	alrm.btn=1;
    this.conn=-1;
//	if (this.wake==1) {
	  this.run=true;
      //return;
//	}
    this.wake++;
  },
  show : function(){
  if (!this.run) return;
  this.v=w.battVoltage(1);
  var g=w.gfx;
  var d=(Date()).toString().split(' ');
  var t=(d[4]).toString().split(':');
  var s=(t[2]).toString().split('');
  //hours
  if (t[0]!=this.hour){
    this.hour=t[0];
    g.setColor(0,colo.bck1);
    g.fillRect(0,55,100,150);
    g.setColor(1,colo.txt);
    g.setFont("Vector",60);
    g.drawString(t[0],10,75); //hours
//  g.setFont("Vector",45);
//  g.drawString(":",100,75);
  g.flip();
  }
  //minutes
  if (t[1]!=this.min){
    this.min=t[1];
//  g.drawString(":",100,75);
    g.setFont("Vector",60);
    g.setColor(0,colo.bck);
    g.fillRect(105,55,210,150);
    g.setColor(1,colo.txt1);//
    g.drawString(t[1],123,75); //minutes
    g.flip();
  }
  //seconds
  g.setColor(0,colo.bck);
  g.fillRect(211,55,240,150);
  g.setColor(1,colo.btnTxt);//
  g.setFont("Vector",35);
  g.drawString(s[0],218,70); //seconds
  g.drawString(s[1],218,108); //seconds
  g.flip(); 
  //batt & bt status
  if (this.v!=this.batt ){
    this.batt=this.v;
    if (digitalRead(w.pin.CHARGING)==1)
      g.setColor(0,colo.btnSt);
    else if (this.v<=20)
      g.setColor(0,colo.btnAl);
    else 
      g.setColor(0,colo.btnDs);
    g.fillRect(162,0,239,50);//batt
    g.setColor(1,colo.btnTxt);
    g.setFont("7x11Numeric7Seg",4);
    g.drawString(this.v,240-(g.stringWidth(this.v)),3); //batt
    g.flip();
  }
  //bt status on date
  if (set.bt != this.bt){
	this.bt=set.bt;
	if (this.bt==0)	g.setColor(0,colo.bck1);
    else g.setColor(0,colo.bck3);
	g.fillRect(0,0,158,50); //date
    g.setColor(1,colo.btnTxt);
    g.setFont("Vector",35);
    g.drawString(d[2]+" "+d[0].toUpperCase(), (81-(g.stringWidth(d[2]+" "+d[0].toUpperCase()))/2) ,9); //date
	g.flip();
  }
  //memmory  
  if (mem()!=this.mem){
    this.mem=mem();
    g.setColor(1,colo.btnDs1);
    g.fillRect(0,200,78,239); //bottom1 memmory
    g.setColor(0,colo.btnTxt);
    g.setFont("Vector",30);
    g.drawString(mem(),4,207); //memmory
    g.flip();
  }
  //Alarms
  if (alrm.start==1) {
  if(alrm.btn!==-1){
    alrm.btn=-1;
    this.c=colo.btnTxt;
  	if (alrm.buzz!=-1) g.setColor(0,colo.btnAl);
    else if (alrm[1].tmr!==-1||alrm[2].tmr!==-1||alrm[3].tmr!==-1) {g.setColor(0,colo.btnEn);this.c=colo.btnTxt1;}
    else  g.setColor(0,colo.btnDs1);
	g.fillRect(82,200,158,239); //bottom 2 alarms
	g.setColor(1,this.c);
	g.setFont("Vector",35);
	g.drawString("AL",97,207); //Alarms
	g.flip();
  }
  }
  //euc
  if (typeof euc !== 'undefined') {
  if (euc.conn!=this.conn || euc.lock!=this.lock) {
    this.lock=euc.lock;
    this.conn=euc.conn;
    if (euc.lock==1 && euc.conn=="READY") g.setColor(0,colo.btnSt);
    else if (euc.lock==1 ) g.setColor(0,colo.btnAl);
    else if (euc.conn=="READY")g.setColor(0,colo.btnEn1);
    else g.setColor(0,colo.btnDs1);
    g.fillRect(162,200,239,239);
    g.setColor(1,colo.btnTxt);
    g.setFont("Vector",35);
    g.drawString("EUC",167,207); 
    g.flip();
  }
  }  
  //loop
    this.tid=setTimeout(function(t){
      t.tid=-1;
      t.show();
    },1000,this);
  },
  tid:-1,
  run:false,
  clear : function(){
    var g=w.gfx;
    pal[0]=colo.bck0;
    g.clear();
    this.exit();
    return true;
  },
  exit: function(){
    this.run=false;
    if (this.tid>=0) clearTimeout(this.tid);
    this.tid=-1;
	this.wake=0;
    return true;
  },
  off: function(){
    var g=w.gfx;
    g.off();
    this.clear();
  }
};
